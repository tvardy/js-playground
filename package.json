{
  "name": "js-playground",
  "version": "1.0.0",
  "description": "just checking some interesting stuff",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "bs:reload": "browser-sync reload",
    "prebuild": "npm run clean",
    "build": "node .esbuild.cjs",
    "build:prod": "npm run build -- prod",
    "build:ghpages": "rm -rf ./docs && npm run build:prod && mv ./dist ./docs && rm -rf ./docs/*.map",
    "postbuild": "npm-run-all -p copy:*",
    "copy:html": "cp src/*.html dist/",
    "copy:css": "cp src/common.css dist/",
    "copy:uce": "mkdir -p dist/components && uce-template src/components -o dist/components",
    "clean": "rm -rf dist",
    "format": "prettier --write \"./**/*.{js,cjs,html,css,scss,json,svelte}\"",
    "lint": "eslint --fix src/",
    "start": "npm-run-all build -p start:*",
    "start:build": "onchange \"src/**/*\" -- npm-run-all build bs:reload",
    "start:bs": "browser-sync start --server dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "esbuild": {
    "entries": [
      "src/main-stent.js",
      "src/main-preach.js",
      "src/main-stores.js"
    ],
    "outdir": "dist"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,html,scss}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tvardy/js-playground.git"
  },
  "keywords": [
    "playground"
  ],
  "author": "Grzegorz (Greg) Twardowski (https://github.com/tvardy)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/tvardy/js-playground/issues"
  },
  "homepage": "https://github.com/tvardy/js-playground#readme",
  "dependencies": {
    "nanoid": "3.1.20",
    "preach": "0.3.0",
    "stent": "8.0.4",
    "uce-loader": "2.0.0",
    "uce-template": "0.4.2"
  },
  "devDependencies": {
    "babel-eslint": "10.1.0",
    "browser-sync": "2.26.14",
    "browserslist": "4.16.3",
    "esbuild": "0.8.44",
    "esbuild-svelte": "0.4.1",
    "eslint": "7.19.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-standard": "5.0.0",
    "husky": "5.0.9",
    "lint-staged": "10.5.4",
    "live-server": "1.2.1",
    "npm-run-all": "4.1.5",
    "onchange": "7.1.0",
    "pinst": "2.1.4",
    "prettier": "2.2.1",
    "prettier-plugin-svelte": "2.1.4"
  },
  "engines": {
    "node": "12.x"
  }
}
