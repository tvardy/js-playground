<style scoped>
  button {
    color: olive;
    font-weight: bold;
  }
</style>

<clicker-preach>
  The <button onclick={{increase}}>{{thing}}</button> is {{count.value}}
</clicker-preach>

<script type="module" setup>
  import { reactive } from '@uce';
  import { connect } from '../store-preach.js';

  const component = {
    thing: 'click state',
    count: reactive({ value: 0 }),
    increase: () => { console.trace(':: Preach Clicker: placeholder increase() called') }
  }

  export default component

  function mapState({ count }) {
    component.count.value = count
  }

  function mapActions(actions) {
    component.increase = actions.increase
  }

  connect(mapState, mapActions)
</script>
